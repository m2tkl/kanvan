{
  "name": "kanvan",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "npm run build:types && npm run build:lib",
    "build:lib": "vite build",
    "build:playground": "vite build --config vite.playground.config.ts",
    "build:types": "vue-tsc -p tsconfig.build.json",
    "prepare": "npm run build",
    "preview": "vite preview",
    "preview:playground": "vite preview --config vite.playground.config.ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "playwright test"
  },
  "main": "dist/kanvan.umd.js",
  "module": "dist/kanvan.es.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/kanvan.es.js",
      "require": "./dist/kanvan.umd.js"
    }
  },
  "files": [
    "dist"
  ],
  "dependencies": {
    "vue": "^3.2.47"
  },
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "@testing-library/jest-dom": "^6.1.2",
    "@testing-library/vue": "^8.0.1",
    "@types/node": "^20.8.10",
    "@vitejs/plugin-vue": "^4.1.0",
    "@vitest/coverage-v8": "^1.1.3",
    "@vue/test-utils": "^2.4.1",
    "happy-dom": "^12.8.1",
    "typescript": "^4.9.3",
    "vite": "^4.2.0",
    "vitest": "^1.1.3",
    "vue-tsc": "^1.2.0"
  }
}
